{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "experimentalDecorators": true,
        "strict": true,
        "jsx": "react",
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "Node16",
        "moduleResolution": "Node16",
        "sourceMap": true,
        "jsxFactory": "XSLFO.createElement",
        "outDir": "dist/",
        "rootDir": "src/"
    },
    "include": [
        "src/**/*"
    ]
}
