{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "target": "ES5",
        "lib": ["ES2020", "dom"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "jsxImportSource": "@jsx-xsl-fo/core",
        "outDir": "dist/",
        "rootDir": "src/",
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        { "path": "../../packages/core" },
        { "path": "../../packages/reporting" }
    ]
}
